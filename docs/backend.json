
{
  "entities": {
    "InventoryItem": {
      "title": "InventoryItem",
      "type": "object",
      "description": "Um item de acesso digital no estoque.",
      "properties": {
        "service": { "type": "string" },
        "account": { "type": "string" },
        "credentials": { "type": "string" },
        "status": { "type": "string", "enum": ["available", "used"] },
        "notes": { "type": "string" },
        "profiles": { "type": "number" },
        "profilesUsed": { "type": "number" },
        "createdAt": { "type": "number" }
      },
      "required": ["service", "account", "credentials", "status", "createdAt"]
    },
    "HistoryEntry": {
      "title": "HistoryEntry",
      "type": "object",
      "description": "Registro de uma retirada de acesso.",
      "properties": {
        "itemId": { "type": "string" },
        "service": { "type": "string" },
        "account": { "type": "string" },
        "message": { "type": "string" },
        "timestamp": { "type": "number" }
      },
      "required": ["itemId", "service", "account", "message", "timestamp"]
    },
    "ServiceConfig": {
      "title": "ServiceConfig",
      "type": "object",
      "description": "Configurações de serviços do usuário.",
      "properties": {
        "names": { "type": "array", "items": { "type": "string" } }
      }
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/users/{userId}/inventory/{itemId}": {
      "schema": "InventoryItem",
      "description": "Coleção de itens no estoque do usuário."
    },
    "/users/{userId}/history/{historyId}": {
      "schema": "HistoryEntry",
      "description": "Histórico de vendas/retiradas do usuário."
    },
    "/users/{userId}/settings/services": {
      "schema": "ServiceConfig",
      "description": "Lista de serviços configurados pelo usuário."
    }
  }
}
